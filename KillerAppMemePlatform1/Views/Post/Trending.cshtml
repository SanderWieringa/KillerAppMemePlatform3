@model IEnumerable<KillerAppMemePlatform1.Logic.Interfaces.PostModel>

@{
    ViewBag.Title = "Trending";
}

<div class="jumbotron">
    <h1>Trending</h1>
    <p class="lead">Trending</p>
</div>

<div class="row">
    <table class="table">
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.PostId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.FilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.AccountId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StatusId)
                </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.PostId)
                    </td>*@
                <td>
                    <a href="@Url.Action("PostDetails","Post", new { id = item.PostId })">
                        <img src="@Url.Content(item.FilePath)" width="700" height="700">
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.AccountId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusId)
                    </td>*@
                <td>
                    @Html.ActionLink("Edit", "Edit", new { item.PostId }) |
                    @Html.ActionLink("Details", "Details", new { item.PostId }) |
                    @Html.ActionLink("Delete", "Delete", new { item.PostId })
                </td>
            </tr>
        }

    </table>
</div>
